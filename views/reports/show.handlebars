<div class="row">
  <div class="col s12 m8">
    <h3>{{report.title}}</h3>
    <div class="card report">
      <div class="card-content">
        <span class="card-title">{{formatDate report.date 'MMMM Do YYYY'}}</span>
        {{{report.body}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{report.user.firstName}} {{report.user.lastName}}</span>
        <img src="{{report.user.image}}" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/stories/user/{{report.user.id}}">More From {{report.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>